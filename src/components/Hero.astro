---
import { useTranslations } from "../i18n/utils";

export interface Props {
  lang: "es" | "en";
}

const { lang } = Astro.props;
const t = useTranslations(lang);
---

<section
  id="home"
  class="min-h-screen flex items-center justify-center relative overflow-hidden bg-white dark:bg-dark-900 transition-colors duration-300"
>
  <!-- Background gradient -->
  <div
    class="absolute inset-0 bg-gradient-to-br from-white via-gray-100 to-primary-50 dark:from-dark-900 dark:via-dark-800 dark:to-accent-900/20 transition-colors duration-300"
  >
  </div>

  <!-- Animated background elements -->
  <div class="absolute inset-0 overflow-hidden">
    <div
      class="absolute -top-40 -right-40 w-80 h-80 bg-primary-500/10 rounded-full blur-3xl animate-bounce-slow"
    >
    </div>
    <div
      class="absolute -bottom-40 -left-40 w-80 h-80 bg-accent-500/10 rounded-full blur-3xl animate-bounce-slow"
      style="animation-delay: 1s;"
    >
    </div>
  </div>

  <div class="relative z-10 max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
    <div class="animate-fade-in">
      <!-- Greeting -->
      <p class="text-lg text-gray-700 dark:text-gray-300 mb-4 animate-slide-up">
        {t("hero.greeting")}
      </p>

      <!-- Name -->
      <h1
        class="text-5xl md:text-7xl font-bold text-gray-900 dark:text-white mb-6 animate-slide-up"
        style="animation-delay: 0.2s;"
      >
        <span
          class="bg-gradient-to-r from-primary-400 to-accent-400 bg-clip-text text-transparent"
        >
         √Ångel Bielsa
        </span>
      </h1>

      <!-- Role -->
      <h2
        class="text-2xl md:text-3xl text-gray-600 dark:text-gray-200 mb-8 animate-slide-up"
        style="animation-delay: 0.4s;"
      >
        {t("hero.role")}
      </h2>

      <!-- Description -->
      <p
        class="text-lg text-gray-700 dark:text-gray-300 max-w-3xl mx-auto mb-12 leading-relaxed animate-slide-up"
        style="animation-delay: 0.6s;"
      >
        {t("hero.description")}
      </p>

      <!-- CTA Buttons -->
      <div
        class="flex flex-col sm:flex-row gap-4 justify-center animate-slide-up"
        style="animation-delay: 0.8s;"
      >
        <a
          href="#projects"
          class="px-8 py-4 bg-gradient-to-r from-primary-600 to-primary-700 text-white font-semibold rounded-lg hover:from-primary-700 hover:to-primary-800 transform hover:scale-105 transition-all duration-200 shadow-lg hover:shadow-primary-500/25"
        >
          {t("hero.cta")}
        </a>
        <a
          href="#contact"
          class="px-8 py-4 border-2 border-black/10 dark:border-white/20 text-gray-900 dark:text-white font-semibold rounded-lg hover:bg-black/5 dark:hover:bg-white/10 hover:border-black/20 dark:hover:border-white/30 transform hover:scale-105 transition-all duration-200"
        >
          {t("hero.contact")}
        </a>
      </div>
    </div>
  </div>
</section>
